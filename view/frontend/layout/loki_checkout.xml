<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:View/Layout:etc/page_configuration.xsd">
    <head>
        <remove src="Buckaroo_Magento2::css/credit-cards.css"/>
        <remove src="Buckaroo_Magento2::css/styles.css"/>
    </head>
    <body>
        <referenceBlock name="loki.script.component">
            <block
                name="loki-checkout-buckaroo.script.component.creditcard-component"
                template="LokiCheckout_Buckaroo::script/component/creditcard-component.phtml"
            />

            <block
                name="loki-checkout-buckaroo.script.component.paybybank-component"
                template="LokiCheckout_Buckaroo::script/component/paybybank-component.phtml"
            />

            <block
                name="loki-checkout-buckaroo.script.component.afterpay-component"
                template="LokiCheckout_Buckaroo::script/component/afterpay-component.phtml"
            />

            <block
                ifconfig="payment/buckaroo_magento2_creditcards/active"
                name="loki-checkout-buckaroo.script.component.hosted-fields-component"
                template="LokiCheckout_Buckaroo::script/component/hosted-fields-component.phtml"
            />
        </referenceBlock>
    </body>
</page>
