<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:View/Layout:etc/page_configuration.xsd">
    <body>
        <block
            name="loki-checkout.payment.payment-methods.buckaroo_magento2_creditcard.form"
            template="LokiCheckout_Buckaroo::checkout/payment/method/creditcard.phtml"/>

        <block
            name="loki-checkout.payment.payment-methods.buckaroo_magento2_afterpay.form"
            template="LokiCheckout_Core::generic/container.phtml">
            <block
                name="loki-checkout.payment.payment-methods.buckaroo_magento2_afterpay.form.dob" as="dob"
                template="Loki_FieldComponents::form/field.phtml">
                <arguments>
                    <argument name="minimum_age" xsi:type="number">18</argument>
                    <argument name="input_type" xsi:type="string">date</argument>
                    <argument name="is_required" xsi:type="boolean">true</argument>
                </arguments>
            </block>

            <block
                name="loki-checkout.payment.payment-methods.buckaroo_magento2_afterpay.form.iban" as="iban"
                template="Loki_FieldComponents::form/field.phtml">
                <arguments>
                    <argument name="alpine_mask" xsi:type="string">aa99 **** **** **** **** **** **** **** **</argument>
                    <argument name="placeholder" xsi:type="string">NL00 ABCD 0000 0000 0000 0000 0000 0000 00</argument>
                    <argument name="is_required" xsi:type="boolean">true</argument>
                </arguments>
            </block>

            <block
                name="loki-checkout.payment.payment-methods.buckaroo_magento2_afterpay.form.terms" as="terms"
                template="Loki_FieldComponents::form/field.phtml">
                <arguments>
                    <argument name="field_type" xsi:type="string">checkbox</argument>
                    <argument name="is_required" xsi:type="boolean">true</argument>
                </arguments>
            </block>
        </block>

        <block
            name="loki-checkout.payment.payment-methods.buckaroo_magento2_afterpay2.form"
            template="LokiCheckout_Core::generic/container.phtml">
            <block
                name="loki-checkout.payment.payment-methods.buckaroo_magento2_afterpay2.form.dob" as="dob"
                template="Loki_FieldComponents::form/field.phtml">
                <arguments>
                    <argument name="minimum_age" xsi:type="number">18</argument>
                    <argument name="input_type" xsi:type="string">date</argument>
                    <argument name="is_required" xsi:type="boolean">true</argument>
                </arguments>
            </block>

            <block
                name="loki-checkout.payment.payment-methods.buckaroo_magento2_afterpay2.form.iban" as="iban"
                template="Loki_FieldComponents::form/field.phtml">
                <arguments>
                    <argument name="alpine_mask" xsi:type="string">aa99 **** **** **** **** **** **** **** **</argument>
                    <argument name="placeholder" xsi:type="string">NL00 ABCD 0000 0000 0000 0000 0000 0000 00</argument>
                    <argument name="is_required" xsi:type="boolean">true</argument>
                </arguments>
            </block>

            <block
                name="loki-checkout.payment.payment-methods.buckaroo_magento2_afterpay2.form.terms" as="terms"
                template="Loki_FieldComponents::form/field.phtml">
                <arguments>
                    <argument name="field_type" xsi:type="string">checkbox</argument>
                    <argument name="is_required" xsi:type="boolean">true</argument>
                </arguments>
            </block>
        </block>

        <!--
        <block
            name="loki-checkout.payment.payment-methods.buckaroo_magento2_creditcards.form"
            template="LokiCheckout_Buckaroo::checkout/payment/method/hosted-fields.phtml"/>
        -->
    </body>
</page>
