<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:View/Layout:etc/page_configuration.xsd">
    <body>
        <block
            name="loki-checkout.payment.payment-methods.buckaroo_magento2_creditcard.form"
            template="LokiCheckout_Core::generic/container.phtml">
            <block
                name="loki-checkout.payment.payment-methods.buckaroo_magento2_creditcard.form.card_type"
                template="LokiCheckout_Buckaroo::checkout/payment/method/creditcard.phtml"/>
        </block>

        <block
            name="loki-checkout.payment.payment-methods.buckaroo_magento2_transfer.additional"
            template="LokiCheckout_Buckaroo::checkout/payment/method/transfer.phtml"/>

        <block
            name="loki-checkout.payment.payment-methods.buckaroo_magento2_voucher.form"
            template="LokiCheckout_Core::generic/container.phtml">
            <block
                name="loki-checkout.payment.payment-methods.buckaroo_magento2_voucher.form.voucher" as="voucher"
                template="Loki_FieldComponents::form/field.phtml">
                <arguments>
                    <argument name="field_label" xsi:type="string">Voucher code:</argument>
                </arguments>
            </block>
        </block>

        <block
            name="loki-checkout.payment.payment-methods.buckaroo_magento2_paybybank.form"
            template="LokiCheckout_Core::generic/container.phtml">
            <block
                name="loki-checkout.payment.payment-methods.buckaroo_magento2_paybybank.form.issuer" as="issuer"
                template="LokiCheckout_Buckaroo::checkout/payment/method/paybybank.phtml"
            />
        </block>

        <block
            name="loki-checkout.payment.payment-methods.buckaroo_magento2_sepadirectdebit.form"
            template="LokiCheckout_Core::generic/container.phtml">

            <block
                name="loki-checkout.payment.payment-methods.buckaroo_magento2_sepadirectdebit.form.customer_account_name" as="customer_account_name"
                template="Loki_FieldComponents::form/field.phtml">
                <arguments>
                    <argument name="field_label" xsi:type="string">Bank account holder</argument>
                    <argument name="placeholder" xsi:type="string">John Doe</argument>
                </arguments>
            </block>

            <block
                name="loki-checkout.payment.payment-methods.buckaroo_magento2_sepadirectdebit.form.customer_iban" as="customer_iban"
                template="Loki_FieldComponents::form/field.phtml">
                <arguments>
                    <argument name="field_label" xsi:type="string">Bank account number</argument>
                    <argument name="field_attributes" xsi:type="array">
                        <item name="x-mask" xsi:type="string">aa99 **** **** **** **** **** **** **** **</item>
                        <item name="placeholder" xsi:type="string">NL00 ABCD 0000 0000 0000 0000 0000 0000 00</item>
                    </argument>
                </arguments>
            </block>
        </block>

        <block
            name="loki-checkout.payment.payment-methods.buckaroo_magento2_sepadirectdebit.additional"
            template="LokiCheckout_Buckaroo::checkout/payment/method/sepadirectdebit.phtml"/>

        <block
            name="loki-checkout.payment.payment-methods.buckaroo_magento2_afterpay.form"
            template="LokiCheckout_Core::generic/container.phtml">
            <block
                name="loki-checkout.payment.payment-methods.buckaroo_magento2_afterpay.form.customer_DoB" as="customer_DoB"
                template="Loki_FieldComponents::form/field.phtml">
                <arguments>
                    <argument name="field_label" xsi:type="string">Date of Birth:</argument>
                    <argument name="minimum_age" xsi:type="number">18</argument>
                    <argument name="input_type" xsi:type="string">date</argument>
                </arguments>
            </block>

            <block
                name="loki-checkout.payment.payment-methods.buckaroo_magento2_afterpay.form.customer_iban" as="customer_iban"
                template="Loki_FieldComponents::form/field.phtml">
                <arguments>
                    <argument name="field_label" xsi:type="string">Bank Account Number:</argument>
                    <argument name="field_attributes" xsi:type="array">
                        <item name="x-mask" xsi:type="string">aa99 **** **** **** **** **** **** **** **</item>
                        <item name="placeholder" xsi:type="string">NL00 ABCD 0000 0000 0000 0000 0000 0000 00</item>
                    </argument>
                </arguments>
            </block>

            <block
                name="loki-checkout.payment.payment-methods.buckaroo_magento2_afterpay.form.termsCondition" as="termsCondition"
                template="Loki_FieldComponents::form/field.phtml">
                <arguments>
                    <argument name="field_label" xsi:type="string">Terms and Conditions:</argument>
                    <argument name="field_type" xsi:type="string">checkbox</argument>
                </arguments>
            </block>
        </block>

        <block
            name="loki-checkout.payment.payment-methods.buckaroo_magento2_afterpay2.form"
            template="LokiCheckout_Core::generic/container.phtml">
            <block
                name="loki-checkout.payment.payment-methods.buckaroo_magento2_afterpay2.form.customer_DoB" as="customer_DoB"
                template="Loki_FieldComponents::form/field.phtml">
                <arguments>
                    <argument name="field_label" xsi:type="string">Date of Birth:</argument>
                    <argument name="minimum_age" xsi:type="number">18</argument>
                    <argument name="input_type" xsi:type="string">date</argument>
                </arguments>
            </block>

            <block
                name="loki-checkout.payment.payment-methods.buckaroo_magento2_afterpay2.form.customer_iban" as="customer_iban"
                template="Loki_FieldComponents::form/field.phtml">
                <arguments>
                    <argument name="field_label" xsi:type="string">Bank Account Number:</argument>
                    <argument name="field_attributes" xsi:type="array">
                        <item name="x-mask" xsi:type="string">aa99 **** **** **** **** **** **** **** **</item>
                        <item name="placeholder" xsi:type="string">NL00 ABCD 0000 0000 0000 0000 0000 0000 00</item>
                    </argument>
                </arguments>
            </block>

            <block
                name="loki-checkout.payment.payment-methods.buckaroo_magento2_afterpay2.form.termsCondition" as="termsCondition"
                template="Loki_FieldComponents::form/field.phtml">
                <arguments>
                    <argument name="field_label" xsi:type="string">Terms and Conditions:</argument>
                    <argument name="field_type" xsi:type="string">checkbox</argument>
                </arguments>
            </block>
        </block>

        <block
            name="loki-checkout.payment.payment-methods.buckaroo_magento2_afterpay20.form"
            template="LokiCheckout_Core::generic/container.phtml">

            <block
                name="loki-checkout.payment.payment-methods.buckaroo_magento2_afterpay20.form.customer_identificationNumber" as="customer_identificationNumber"
                template="Loki_FieldComponents::form/field.phtml">
                <arguments>
                    <argument name="field_label" xsi:type="string">Identification number:</argument>
                </arguments>
            </block>

            <block
                name="loki-checkout.payment.payment-methods.buckaroo_magento2_afterpay20.form.customer_telephone" as="customer_telephone"
                template="Loki_FieldComponents::form/field.phtml">
                <arguments>
                    <argument name="field_label" xsi:type="string">Phone:</argument>
                </arguments>
            </block>

            <block
                name="loki-checkout.payment.payment-methods.buckaroo_magento2_afterpay20.form.customer_DoB" as="customer_DoB"
                template="Loki_FieldComponents::form/field.phtml">
                <arguments>
                    <argument name="field_label" xsi:type="string">Date of Birth:</argument>
                    <argument name="minimum_age" xsi:type="number">18</argument>
                    <argument name="input_type" xsi:type="string">date</argument>
                </arguments>
            </block>

            <block
                name="loki-checkout.payment.payment-methods.buckaroo_magento2_afterpay20.form.customer_coc" as="customer_coc"
                template="Loki_FieldComponents::form/field.phtml">
                <arguments>
                    <argument name="field_label" xsi:type="string">COC Number:</argument>
                </arguments>
            </block>

            <block
                name="loki-checkout.payment.payment-methods.buckaroo_magento2_afterpay20.form.termsCondition" as="termsCondition"
                template="Loki_FieldComponents::form/field.phtml">
                <arguments>
                    <argument name="field_label" xsi:type="string">Terms and Conditions:</argument>
                    <argument name="field_type" xsi:type="string">checkbox</argument>
                </arguments>
            </block>
        </block>

        <!--
        <block
            name="loki-checkout.payment.payment-methods.buckaroo_magento2_creditcards.form"
            template="LokiCheckout_Buckaroo::checkout/payment/method/hosted-fields.phtml"/>
        -->
    </body>
</page>
